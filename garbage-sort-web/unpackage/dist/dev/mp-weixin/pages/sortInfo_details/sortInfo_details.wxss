.root{
	width:100%;
	height:100vh;
	display:flex;
	flex-direction: column;
}
.details-selectBox{
	height: 75rpx;
	width: 100%;
	margin: 0 auto;
	display: flex;
	box-shadow:0px 12px 8px -12px #666666;
}
.details-selectItems{
	flex: 1;
	line-height: 75rpx;
	text-align: center;
}
.details-selectItemTitle{
	color: #ffffff;
}
.details-body{
	width: 100%;
	height: calc(100% - 75rpx);
	z-index: 100;
}
.details-list-block{
	width: 90%;
	height: 90%;
	margin: 5% 5% 5% 5%;
	background-color: #ffffff;
	/* border: #ffffff 2rpx solid;
 */
}
.details-list{
	height: 90%;
	width: 88%;
	align-items: center;
}
.garbageName{
	border-bottom: #000000 ;
